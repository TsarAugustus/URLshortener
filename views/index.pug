doctype html
head
  link(rel='stylesheet', href='/style.css')
body
  if url
    h2 #{url}
  div.submit
    form(action="/api/genUrl", method="post", enctype="application/x-www-form-urlencoded")
      div
        label(for="title") Enter URL
        br
        input(type="text", id="url", name="url", required)
      button(type="submit") Shorten
